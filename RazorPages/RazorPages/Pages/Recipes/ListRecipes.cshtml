@page
@model RazorPages.Pages.Recipes.ListRecipesModel
@{
    <br />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Recipe Name</th>
                <th>Ingredients</th>
                <th>Instructions</th>
                <th>Categories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model.Recipes)
            {
                <tr>
                    <td>@recipe.Title</td>
                    <td>
                        @foreach (var obj in recipe.Ingredients)
                        {
                            <p>
                                -
                                @obj
                            </p>
                        }
                    </td>
                    <td>
                        @foreach (var obj in recipe.Instructions)
                        {
                            <p>
                                -
                                @obj
                            </p>
                        }
                    </td>
                    <td>
                        @foreach (var obj in recipe.Categories)
                        {
                            <p>
                                -
                                @obj
                            </p>
                        }
                    </td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@recipe.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square">Edit</i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@recipe.Id" class="btn btn-primary btn-danger align-content-around">
                            <i class="bi bi-trash">Delete</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square">Create new recipe</i></a>
    </div>
}
