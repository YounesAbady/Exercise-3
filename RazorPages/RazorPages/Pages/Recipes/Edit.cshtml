@page
@model RazorPages.Pages.Recipes.EditModel
@{
    <form method="post">
        <div>
            <label asp-for="Recipe.Id" hidden></label>
            <input asp-for="Recipe.Id" hidden>
            <div class="mt-4">
                <label asp-for="Recipe.Title"></label>
                <input asp-for="Recipe.Title">
            </div>
            <br> <br>
            <div class="mt-4">
                <label asp-for="Recipe.Ingredients"></label>
                <br>
                <textarea name="Recipe.Ingredients" placeholder="After every ingredient press enter for new line." rows="5" cols="30">@foreach (var obj in Model.Recipe.Ingredients)
                    {
                        if (obj != Model.Recipe.Ingredients.Last())
                            @obj.Insert(obj.Length,"\r\n")
                        else
                            @obj                    }</textarea>
                <span asp-validation-for="Recipe.Ingredients" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <label asp-for="Recipe.Instructions"></label>
                <br>
                <textarea name="Recipe.Instructions" placeholder="After every instructions press enter for new line." rows="5" cols="30">@foreach (var obj in Model.Recipe.Instructions)
                    {
                        if (obj != Model.Recipe.Instructions.Last())
                            @obj.Insert(obj.Length,"\r\n")
                        else
                            @obj
                    }</textarea>
                <span asp-validation-for="Recipe.Instructions" class="text-danger"></span>
            </div>
            <div class="mt-4">
                Old Categories:
                @foreach (var obj in @Model.Recipe.Categories)
                {
                    @obj.Insert(obj.Length,"  ")
                }
                <br>
                <span class="text-danger">All old categories will be deleted!<br> Please select new ones.</span>
            </div>
            <div class="mt-4">
                <form method="post">
                    <label asp-for="Recipe.Categories">Choose one or more new category:</label>
                    <br><br>
                    <select name="Recipe.Categories" id="cars" multiple style="color:black">
                        @foreach (var obj in Model.Categories)
                        {
                            <option value=@obj>@obj</option>
                        }
                    </select>
                    <p>Hold down the Ctrl (windows) or Command (Mac) button to select multiple options.</p>
                </form>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-trash3-fill"> Edit</i></button>
        </div>
    </form>
}
