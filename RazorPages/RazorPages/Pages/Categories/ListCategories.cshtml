@page
@model RazorPages.Pages.Categories.ListCategoriesModel
@{
    <br />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td width="50%">@category</td>
                    <td width="20%" align="right">
                        <a asp-page="Edit" asp-route-category="@category" class="btn btn-primary">
                            <i class="bi bi-pencil-square">Edit</i>
                        </a>
                        <a asp-page="Delete" asp-route-category="@category" class="btn btn-primary btn-danger align-content-around">
                            <i class="bi bi-trash">Delete</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square">Create new category</i></a>
    </div>
}
